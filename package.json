{
  "name": "pokemon-tcg-pocket-database",
  "version": "2.0.0-beta.2",
  "description": "Pokemon TCG Pocket complete cards and sets JSON database",
  "files": [
    "dist/cards.json",
    "dist/cards.min.json",
    "dist/cards/*.json",
    "dist/sets.json",
    "dist/rarities.json",
    "dist/pullRates.json",
    "dist/images/**/*"
  ],
  "scripts": {
    "generate": "deno --allow-read --allow-write --allow-env ./scripts/create-db.js",
    "assign": "bun ./scripts/assign-pack.js",
    "download": "bun ./scripts/download-images.ts",
    "sqliteDB": "bun ./scripts/convert-to-sqlite.ts",
    "scrap": "bun ./scripts/scraps.ts"
  },
  "keywords": [
    "pokemon",
    "pokemon tcg",
    "pokemon pocket",
    "Pokemon TCG Pocket",
    "pokemon cards",
    "PTCGP"
  ],
  "author": "flibustier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flibustier/pokemon-tcg-pocket-database.git"
  },
  "bugs": {
    "url": "https://github.com/flibustier/pokemon-tcg-pocket-database/issues"
  },
  "homepage": "https://github.com/flibustier/pokemon-tcg-pocket-database#readme",
  "devDependencies": {
    "cheerio": "^1.1.2",
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
